{
  "name": "soundboard",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "build": "mkdir -p edutainment && tsc && cp -r public/* edutainment/",
    "watch": "tsc --watch",
    "clean": "rm -rf edutainment/*",
    "start": "serve edutainment",
    "lint": "eslint 'src/**/*.{ts,js}'",
    "format": "prettier --write 'src/**/*.{ts,js,css,html}' 'public/**/*.{css,html}'",
    "copy:watch": "cp -r public/* edutainment/ && chokidar 'public/**/*.{html,css}' -c 'cp -r public/* edutainment/'",
    "dev": "npm run clean && npm-run-all --parallel watch copy:watch start"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/ethan-hawksley/soundboard.git"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "type": "module",
  "bugs": {
    "url": "https://github.com/ethan-hawksley/soundboard/issues"
  },
  "homepage": "https://github.com/ethan-hawksley/soundboard#readme",
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^8.35.1",
    "@typescript-eslint/parser": "^8.35.1",
    "chokidar-cli": "^3.0.0",
    "eslint": "^9.30.1",
    "eslint-config-google": "^0.14.0",
    "eslint-config-prettier": "^10.1.5",
    "eslint-plugin-import": "^2.32.0",
    "eslint-plugin-prettier": "^5.5.1",
    "npm-run-all": "^4.1.5",
    "prettier": "^3.6.2",
    "serve": "^14.2.4",
    "typescript": "^5.8.3"
  }
}
